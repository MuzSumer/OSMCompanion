<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.System.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.System.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.System" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- ToolBar -->
        <item name="colorPrimary">@color/ic_color_night</item>

        <item name="colorPrimaryVariant">@color/teal_700</item>

        <!--

        -->
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColorSecondary">@color/teal_700</item>
        <item name="android:editTextColor">@color/ic_color_day</item>


        <!-- Secondary brand color. -->
        <item name="android:colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_700</item>

        <item name="android:statusBarColor">@color/ic_color_night</item>
        <item name="android:navigationBarColor">@color/ic_color_night</item>

    </style>

    <style name="Theme.System.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- parent="@android:style/Theme.Dialog" -->
    <style name="Theme.SystemDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/ic_color_night</item>
        <item name="android:colorForeground">@color/teal_700</item>
        <item name="android:textColorPrimary">@color/ic_color_day</item>
        <item name="android:colorPrimaryDark">@color/ic_color_night</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ic_color_day</item>
        <item name="android:colorPrimary">@color/teal_700</item>
        <item name="android:colorSecondary">@color/teal_700</item>
        <item name="android:editTextColor">@color/ic_color_day</item>
    </style>

</resources>